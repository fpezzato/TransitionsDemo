<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.fpezzato.transitionsdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="._01_contentTransition.Activity_01_content_transition_main">
        </activity>
        <activity
            android:name="._02_enter_transition.Activity_02_activity_transition"
            android:theme="@style/Theme._02">
        </activity>
        <activity android:name="._03_shared_enter_transition.Activity_03_shared_enter_main"
                  android:theme="@style/Theme._03"
            >
        </activity>
        <activity android:name="._03_shared_enter_transition.Activity_03_shared_enter_dest"
                  android:theme="@style/Theme._03"
            >
        </activity>

        <activity android:name="._04_custom_shared_enter_transition.Activity_04_custom_shared_enter_main"
                  android:theme="@style/Theme._04"
            >
        </activity>
        <activity android:name="._04_custom_shared_enter_transition.Activity_04_custom_shared_enter_dest"
                  android:theme="@style/Theme._04"
            >
        </activity>
    </application>

</manifest>