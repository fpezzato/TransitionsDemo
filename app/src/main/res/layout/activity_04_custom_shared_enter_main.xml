<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ddf8d"
    tools:context="org.fpezzato.transitionsdemo._03_shared_enter_transition.Activity_03_shared_enter_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelie33"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="128dp"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline66"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.666"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="256dp"/>


    <TextView
        android:id="@+id/_04_shared_element_01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#f77a14"
        android:textColor="#FFF"
        android:transitionName="@string/_04_target_name_ORANGE_TO_BLUE"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="51dp"
        android:layout_height="20dp"
        android:text="main!"
        android:textSize="20sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guidelie33"
        android:layout_marginRight="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open details"
        android:id="@+id/go"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guidelie33"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>
